.markdown-text {
  word-wrap: break-word;
}
.markdown-text,
.markdown-text h1,
.markdown-text h2,
.markdown-text h3,
.markdown-text h4,
.markdown-text h5,
.markdown-text h6,
.markdown-text pre,
.markdown-text code,
.markdown-text blockquote,
.markdown-text em,
.markdown-text strong,
.markdown-text code {
  font-size: 14px;
  line-height: 20px;
  font-weight: normal;
  font-style: normal;
  font-family: consolas, monaco, courier, "courier new", fixed-width;
  color: #333333;
}
.markdown-text h1,
.markdown-text h2,
.markdown-text h3,
.markdown-text h4,
.markdown-text h5,
.markdown-text h6,
.markdown-text pre,
.markdown-text code,
.markdown-text blockquote,
.markdown-text ol,
.markdown-text ul,
.markdown-text li,
.markdown-text p,
.markdown-text section,
.markdown-text header,
.markdown-text footer {
  float: none;
  margin: 0;
  padding: 0;
}
.markdown-text h1,
.markdown-text p,
.markdown-text ul,
.markdown-text ol,
.markdown-text pre,
.markdown-text blockquote {
  margin-top: 20px;
  margin-bottom: 20px;
}
.markdown-text h1 {
  position: relative;
  display: inline-block;
  display: table-cell;
  padding: 20px 0 40px;
  margin: 0;
  overflow: hidden;
}
.markdown-text h1:after {
  content: "====================================================================================================";
  position: absolute;
  bottom: 20px;
  left: 0;
}
// .markdown-text h1 + * {
