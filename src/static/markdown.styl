// }
.markdown-text h2,
.markdown-text h3,
.markdown-text h4,
.markdown-text h5,
.markdown-text h6 {
  position: relative;
  margin-bottom: 20px;
}
.markdown-text h2:before,
.markdown-text h3:before,
.markdown-text h4:before,
.markdown-text h5:before,
.markdown-text h6:before {
  content: "## ";
  display: inline;
}
.markdown-text h3:before {
  content: "### ";
}
.markdown-text h4:before {
  content: "#### ";
}
.markdown-text h5:before {
  content: "##### ";
}
.markdown-text h6:before {
  content: "###### ";
}
.markdown-text li {
  position: relative;
  display: block;
  padding-left: 34px;
  padding-left: 4ch;
}
.markdown-text li:after {
  position: absolute;
  top: 0;
  left: 0;
}
.markdown-text ul > li:after {
  content: "*";
}
.markdown-text ol {
  counter-reset: ol;
}
.markdown-text ol > li:after {
  content: counter(ol) ".";
  counter-increment: ol;
}
.markdown-text pre {
  margin-left: 34px;
  padding-left: 4ch;
}
.markdown-text blockquote {
  position: relative;
  padding-left: 17px;
  padding-left: 2ch;
  overflow: hidden;
}
.markdown-text blockquote:after {
  content: ">\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>\A>";
  white-space: pre;
  position: absolute;
  top: 0;
  left: 0;
  font-size: 14px;
  line-height: 20px;
}
.markdown-text strong:before,
.markdown-text strong:after {
  content: "__";
  display: inline;
}
.markdown-text em:before,
.markdown-text em:after {
  content: "*";
  display: inline;
}
.markdown-text a {
  text-decoration: none;
}
.markdown-text a:before {
  content: "[";
  display: inline;
  color: #333333;
}
.markdown-text a:after {
  content: "](" attr(href) ")";
  display: inline;
  color: #333333;
}
.markdown-text code {
  font-weight: 100;
}
.markdown-text code:before,
.markdown-text code:after {
  content: "`";
  display: inline;
}
.markdown-text pre code:before,
.markdown-text pre code:after {
  content: none;
}
.markdown-text hr {
  position: relative;
  height: 20px;
  font-size: 0;
  line-height: 0;
  overflow: hidden;
  border: 0;
  margin-bottom: 20px;
}
.markdown-text hr:after {
  content: "----------------------------------------------------------------------------------------------------";
  position: absolute;
  top: 0;
  left: 0;
  font-size: 14px;
  line-height: 20px;
  width: 100%;
  word-wrap: break-word;
}
