.index
  height: 100%
  z-index: 1
  img
    width: 100%
  .response
    font-size: 80px
    text-align: center
    line-height: 100px
    color: white  
    position: fixed
    background: #80bd01
    right: 20px
    bottom: 40px
    width: 100px
    height: 100px
    border-radius: 50%                    
  .main
    font-size: 32px
    line-height: 56px
    .title
      font-size:40px;
      font-weight:bold;
      // margin-bottom:10px;
      padding: 20px
    .tips
      display: flex
      font-size: 28px
      padding: 10px 20px
      color: #838383
      border-bottom: 1px solid #eee
      .tab
        flex: auto
      .collection
        display: inline-block
        font-size: 50px;
        text-align: right
        &.green
          color: #80bd01
    .content
      padding: 20px  
      .landlord
        display: flex
        align-items: center
        margin-bottom: 40px
        font-size: 28px
        .avatar
          width: 50px;
          height: 50px;
          border-radius: 50%;
          overflow: hidden
        .name
          flex: auto  
          padding-left: 20px;
          color: #08c
    .comments
      .tag  
        background-color: #eee;
        padding: 20px
      .list
        border-bottom: 1px solid #eee; 
        padding: 20px 
        .author
          display: flex;
          align-items: center;
          //margin-bottom: 20px;
          font-size: 28px
          .avatar
            width: 50px;
            height: 50px;
            border-radius: 50%;
            overflow: hidden
          .name
            flex: auto  
            padding-left: 20px;
            color: #08c
        .content
          padding-left: 50px;
          .markdown-text
            img
              width: 100px 
  .modal
    width: 100%
    height: 100%
    position: absolute
    top: 0
    background: rgba(0,0,0,0.5)
    z-index: 999
    &.hide
      display: none
  .response-wrapper
    z-index: 1000
    width: 100%
    height: 0
    transition: height 4s ease 0
    position fixed
    bottom: 0px
    background: #fff
  .test
    z-index: 1000
    width: 100%
    height: 0
    position: fixed
    bottom: 0
    background: #fff
    height: 400px
    .top
      box-shadow: 0px 10px 10px #ccc
      background: #fff
      width: 100%
      padding: 10px 0
      .sent
        font-size: 50px
        float: right
        margin-right: 30px
        line-height: 40px
        color: #80bd01
    .content
      border: 1px solid #eee
      width: 100% 
      height: 380px
      padding: 4px

            
              
        
    
  
